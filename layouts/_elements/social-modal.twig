{% extends '_helpers/variables' %}

{% block content %}
	<div class="modal" id="socialModal">
		<button type="button" class="close" data-dismiss="modal" aria-label="Close">
				<svg width="20" height="20" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
					<title>Close</title>
					<g stroke-width="3" fill="none" fill-rule="evenodd" stroke-linecap="round"><path d="M17.803 2L2 17.803M2.08 2.08l15.803 15.803"/></g>
				</svg>
		</button>
		<div class="modal-dialog modal-extlg" role="document">
			<div class="modal-content social-modal">
				<div class="social-modal__image" {% if image is defined %}style="background-image: url({{ image }}); background-size: cover;background-position: 50% 50%; background-size: cover;"{% endif %}></div>
				<div class="social-modal__content">
					<div class="social-modal__channel social-modal__channel--technology">{{ channel }}</div>
					<div class="social-modal__text">{{ text|striptags }}</div>
					<div class="article__profile">
						<span class="profile__user_image" style="background-image: url('https://unsplash.it/56/56'); height: 56px; width: 56px; background-size: cover; display: inline-block; border-radius: 50%;"></span>
						<div class="profile__author_wrap">
							<span class="article__author">{{ network }} @{{ author }}</span>
							<a href="http://cog-boilerplate-craft.dev/profile/leah-prince" class="button button__follow">Follow</a>
						</div>
					</div>
				</div>
				{#<p>#}
					{#<span style="background-image: url('{{ authorImage }}'); height: 50px; width: 50px; background-size: cover; display: inline-block; border-radius: 50%;"></span>#}
					{#<a href="{{ socialLink }}">{{ network }} @{{ author }}</a></p>#}
				{#<p>{{ date }}</p>#}
			</div>
		</div>
	</div>
{% endblock %}
