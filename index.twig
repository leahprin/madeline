{{ void(this.beginBlock('content')) }}

	{% set limit = 20 %}
	{% set articlesArr = _Blog.getBlogFeed({'limit': limit, 'offset': 0}) %}
	{% set articles = articlesArr.articles %}

	<div class="home">
		{% if articles|length > 0 %}
			{% if articles[0] is defined %}
				<div class="col-full">
					{% include '_elements/card.twig' with {article: articles[0]} | raw %}
				</div>
			{% endif %}
			{% if articles[1] is defined %}
				<div class="col-third">
					{% include '_elements/card.twig' with {article: articles[1]} | raw %}
				</div>
			{% endif %}
			{% if articles[2] is defined %}
				<div class="col-third">
					{% include '_elements/card.twig' with {article: articles[2]} | raw %}
				</div>
			{% endif %}
			{% if articles[3] is defined %}
				<div class="col-third">
					{% include '_elements/card.twig' with {article: articles[3]} | raw %}
				</div>
			{% endif %}
			{% if articles[4] is defined %}
				<div class="col-half">
					{% include '_elements/card.twig' with {article: articles[4]} | raw %}
				</div>
			{% endif %}
			{% if articles[5] is defined %}
				<div class="col-half">
					{% include '_elements/card.twig' with {article: articles[5]} | raw %}
				</div>
			{% endif %}
			{% if articles[6] is defined %}
				<div class="col-quarter">
					{% include '_elements/card.twig' with {article: articles[6]} | raw %}
				</div>
			{% endif %}
			{% if articles[7] is defined %}
				<div class="col-quarter">
					{% include '_elements/card.twig' with {article: articles[7]} | raw %}
				</div>
			{% endif %}
			{% if articles[8] is defined %}
				<div class="col-quarter">
					{% include '_elements/card.twig' with {article: articles[8]} | raw %}
