{% extends "layouts/main.twig" %}

{% block content %}

	<div class="article article--{{ channel|lower }}">
		<div class="article__image" style="background-image:url({{ image }});background-size: cover;background-position: center"></div>
		<div class="article__container">
			<div class="article__channel_wrap">
				<div class="article__channel">{{ channel }}</div>
			</div>
			<div class="article__header">
				<div class="article__profile">
					<span class="profile__user_image" style="background-image: url('{{ authorImage }}'); height: 56px; width: 56px; background-size: cover; display: inline-block; border-radius: 50%;"></span>
					<div class="profile__author_wrap">
						<span class="article__author">By {{ author }}</span>
						<a href="http://cog-boilerplate-craft.dev/profile/{{entry.author.username}}" class="button button__follow">Follow</a>
					</div>
				</div>
				<div class="article__header_actions">
					<a href="#comments" class="button header_actions header_actions__comments">Comments</a>
					<a href="#" class="button header_actions header_actions__share">Share</a>
				</div>
			</div>


			<h1 class="article__headline">{{ headline }}</h1>
			<p class="article__date">{{ date }}</p>
			<div class="article__intro">{{ text }}</div>

			{{ articleBody|raw }}

			<h2 class="comments-header" id="comments"><span class="disqus-comment-count" data-disqus-url="{{link}}"></span>Comments</h2>
			{% include "_elements/disqus" %}
		</div>
		<h2 class="text-center additional-articles__header">You may also like ...</h2>

	</div>
	{% set limit = 20 %}
	{% set articles = craft.entries.section('posts').find() %}
	<div class="home">
		{% if articles[6] is defined and articles[7] is defined and articles[8] is defined and articles[9] is defined %}
			<div class="col-quarter">
				{% include '_elements/card.twig' with {article: articles[6]} %}
			</div>
			<div class="col-quarter">
				{% include '_elements/card.twig' with {article: articles[7]} %}
			</div>
			<div class="col-quarter">
				{% include '_elements/card.twig' with {article: articles[8]} %}
			</div>
			<div class="col-quarter">
				{% include '_elements/card.twig' with {article: articles[9]} %}
			</div>
		{% endif %}
	</div>



{% endblock %}
